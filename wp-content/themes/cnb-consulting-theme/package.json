{
  "name": "cnb-consulting-theme",
  "version": "1.0.0",
  "description": "CNB Group Consulting WordPress Theme with Professional Build System",
  "main": "src/main.js",
  "scripts": {
    "dev": "vite",
    "build": "NODE_ENV=production vite build",
    "build:dev": "vite build",
    "preview": "vite preview",
    "css:build": "npx tailwindcss -i ./src/style.css -o ./dist/css/style.css --minify",
    "css:watch": "tailwindcss -i ./src/style.css -o ./dist/style.css --watch",
    "clean": "rm -rf dist/",
    "lint": "echo 'Linting not configured yet'",
    "start": "npm run dev"
  },
  "keywords": [
    "wordpress",
    "theme",
    "business",
    "consulting"
  ],
  "author": "CNB Group Consulting",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@alpinejs/collapse": "^3.14.9",
    "@tailwindcss/forms": "^0.5.4",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "postcss": "^8.4.24",
    "tailwind-scrollbar": "^3.1.0",
    "tailwindcss": "^3.3.3",
    "vite": "^4.4.5"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "alpinejs": "^3.12.1"
  }
}
